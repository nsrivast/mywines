<!DOCTYPE html>
<html>
	<head>
	  <title>Winetracker</title>

	  <%= javascript_include_tag "jquery-1.1.1.min.js" %>
		<%= javascript_include_tag "jquery-ui" %>
		<%= javascript_include_tag "dataTables.min.js" %>
		<%= javascript_include_tag "highcharts.js" %>
		<%= javascript_include_tag "defaults-ns.js" %>
		
		<%= stylesheet_link_tag "charts.css" %>
		<%= stylesheet_link_tag "jquery-ui.css" %>
		<%= stylesheet_link_tag "master.css" %>
		
	  <%= csrf_meta_tags %>
	</head>
	
	<body>
		<div id="top-banner">
			<div id="top-banner-content">
				<div id="logo">
					WineTracker
				</div>
				<div id="sitenav">
					<%= link_to 'Users', '/users' %> |
					<%= link_to 'Wines', '/wines' %> |
					<%= link_to 'Tastings', '/tastings' %> |
					<%= link_to 'Classes', '/classification/index' %> |
					<%= link_to 'Charts', '/charts/index' %>
				</div>
			</div>
		</div>
		
		<div id="body-wrapper">
			<%= yield %>
		</div>
	</body>
</html>
