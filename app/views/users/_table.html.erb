<% search = (search == true) ? true : false %>

<table id="user_table<%= search ? "" : "nosearch" %>">
	<thead>
	  <tr>
	    <th>Name</th>
	    <th>Email</th>
	    <th>Actions</th>
	  </tr>
	</thead>

	<tbody>
	<% users.each do |user| %>
	  <tr>
	    <td><%= link_to user.name, user %></td>
	    <td><%= user.email %></td>
	    <td>
				<%= link_to 'Add a tasting',
					{:controller => 'tastings', :action => 'new', :user_id_preselect => user.id} %> |
				<%= link_to 'Edit', edit_user_path(user) %> |
				<%= link_to 'Delete', user, :method => :delete, :data => { :confirm => 'Are you sure?' } %>
			</td>
	  </tr>
	<% end %>
	</tbody>
</table>