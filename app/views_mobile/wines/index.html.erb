<div class="bar-standard bar-header-secondary">
  <a class="button-block">Wine list</a>
</div>

<div class="content">

	<div class="field">
		<%= link_to 'Add a wine', new_wine_path %>
	</div>

	<div class="main_table">
		<% if @wines.nil? || @wines.length == 0 %>
			No wines exist yet. <%= link_to 'Click here', new_wine_path %> to add one.<br /><br />
		<% else %>
			<%= render :partial => 'wines/table', :locals => {:wines => @wines} %>
		<% end %>
	</div>

</div>