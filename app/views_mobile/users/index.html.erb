<div class="bar-standard bar-header-secondary">
  <a class="button-block">User list</a>
</div>

<div class="content">

	<% if @users.nil? || @users.length == 0 %>
		No users exist yet. <%= link_to 'Click here', new_user_path %> to add one.<br /><br />
	<% else %>
		<%= render :partial => 'users/table', :locals => {:users => @users, :search => false} %>
	<% end %>
	
</div>