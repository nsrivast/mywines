<ul class="list">
	<% users.each do |user| %>	
		<li class="list-divider">
			<%= user.name %>
			(<%= user.email %>) - <%= "#{user.tastings.length} tastings"%>
		</li>
		<li>
			<%= link_to 'Add a tasting',
				{:controller => 'tastings', :action => 'new', :user_id_preselect => user.id} %>
		</li>
		<li>
			<%= link_to 'Edit', edit_user_path(user) %>
		</li>
		<li>
			<%= link_to 'Delete', user, :method => :delete, :data => { :confirm => 'Are you sure?' } %>
		</li>
	<% end %>	
	
	<li class="list-divider">
		<%= link_to 'Add a user', new_user_path %>
	</li>
</ul>
